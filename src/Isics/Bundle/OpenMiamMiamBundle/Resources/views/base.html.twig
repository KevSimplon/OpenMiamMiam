<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheet %}
            {% stylesheets
                '@IsicsOpenMiamMiamBundle/Resources/assets/less/bootstrap.less'
                '@IsicsOpenMiamMiamBundle/Resources/assets/less/front.less'
                filter='?uglifycss'
                output='cache/css/*.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header>
                {% block header %}{% endblock %}
            </header>

            {% block global_content %}
                {% include 'IsicsOpenMiamMiamBundle::messages.html.twig' %}
                {% block content %}{% endblock %}
            {% endblock %}

            <footer>
                <hr />
                {% include 'IsicsOpenMiamMiamBundle::copyright.html.twig' %}
            </footer>
        </div>

        {% block javascript %}
            {% javascripts
                'js/jquery-2.0.3.min.js'
                'bootstrap/js/button.js'
                'bootstrap/js/collapse.js'
                'bootstrap/js/transition.js'
                '@IsicsOpenMiamMiamBundle/Resources/assets/js/front.js'
                filter='?uglifyjs2'
                output='cache/js/*.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>