{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    <h1>{{ 'admin.association.sales_orders.form.edit_title'|trans({'%ref%': order.ref}) }} <small>- {{ order.date|format_datetime }}</small></h1>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'admin.association.sales_orders.form.consumer'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <p>
                        <strong>{{ order.firstname }} {{ order.lastname }} {% if order.user is defined %}({{ order.user|format_consumer_ref }}){% endif %}</strong><br />
                        {{ order.address1 }}<br />
                        {% if order.address2 != null %}
                            {{ order.address2 }}<br />
                        {% endif %}
                        {{ order.zipcode }} {{ order.city }}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'admin.association.sales_orders.form.withdrawal_title'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <p>
                        {% set branch=order.branchOccurrence.branch %}
                        <strong>{{ branch.name }}</strong><br />
                        {{ branch.address1 }}<br />
                        {% if branch.address2 != null %}
                            {{ branch.address2 }}<br />
                        {% endif %}
                        {{ branch.zipcode }} {{ branch.city }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <p class="text-right">
        <a href="{{ path('open_miam_miam.admin.association.sales_order.add_rows', {'id': association.id, 'salesOrderId': order.id}) }}" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-plus-sign"></span>
            {{ 'admin.association.sales_orders.form.sales_order_row.create'|trans }}
        </a>

        <a href="{{ path('open_miam_miam.admin.association.sales_order.pay', {'id': association.id, 'salesOrderId': order.id}) }}" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-euro"></span>
            {{ 'admin.association.sales_orders.form.pay'|trans }}
        </a>
    </p>

    {{ form_start(form, {'attr': {'id': 'open_miam_miam_admin_sales_order_form', 'novalidate': '', 'class': 'form form-inline'}}) }}
        {{ form_errors(form) }}

        {% if form.children.salesOrderRows|length > 0 %}
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-association-sales-order">
                    <thead>
                        <tr>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.ref'|trans }}</th>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.product'|trans }}</th>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.producer'|trans }}</th>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.unit_price'|trans }}</th>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.quantity'|trans }}</th>
                            <th>{{ 'admin.association.sales_orders.form.sales_order_row.total'|trans }}</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for child in form.children.salesOrderRows %}
                            {% set salesOrderRow = child.vars.data %}
                            <tr>
                                <td>{{ salesOrderRow.ref }}</td>
                                <td>{{ salesOrderRow.name }}</td>
                                <td>{{ salesOrderRow.producer.name }}</td>
                                <td>{{ salesOrderRow.unitPrice|number_format_currency(open_miam_miam.currency) }}</td>
                                <td>
                                    {{ form_errors(child.quantity) }}
                                    {{ form_widget(child.quantity, {'attr': {'class': 'form-control input-quantity'}}) }}
                                </td>
                                <td>
                                    {% if child.total is defined %}
                                        {{ form_errors(child.total) }}
                                        {{ form_widget(child.total) }}
                                    {% else %}
                                        {{ salesOrderRow.total|number_format_currency(open_miam_miam.currency) }}
                                    {% endif %}
                                </td>
                                <td>
                                    <a data-url="{{ path('open_miam_miam.admin.association.sales_order.delete_row', {'id': association.id, 'salesOrderId': order.id, 'salesOrderRowId': salesOrderRow.id}) }}" class="btn btn-danger btn-xs" title="{{ 'admin.association.sales_orders.form.sales_order_row.delete'|trans }}" data-toggle="modal" href="#delete-dialog"><span class="glyphicon glyphicon-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5">{{ 'admin.association.sales_orders.form.total'|trans }}</th>
                            <td>{{ order.total|number_format_currency(open_miam_miam.currency) }}</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr{% if order.leftToPay %} class="danger"{% endif %}>
                            <th colspan="5">{{ 'admin.association.sales_orders.form.left_to_pay'|trans }}</th>
                            <td>
                                {% if order.leftToPay %}
                                    {{ order.leftToPay|number_format_currency(open_miam_miam.currency) }}
                                {% else %}
                                    {{ 0|number_format_currency(open_miam_miam.currency) }}
                                {% endif %}
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <a href="{{ path('open_miam_miam.admin.association.sales_order.list_for_branch_occurrence', {'id': association.id, 'branchOccurrenceId': order.branchOccurrence.id}) }}" class="pull-right">{{ 'admin.return'|trans }}</a>

            <button type="submit" class="btn btn-primary btn-lg" />
                <span class="glyphicon glyphicon-floppy-save"></span>
                {{ 'admin.save'|trans }}
            </button>
        {% else %}
            {% include 'IsicsOpenMiamMiamBundle:Admin:empty.html.twig' with {'message': 'admin.association.sales_orders.form.sales_order_rows.no'|trans} %}
        {% endif %}

        {% do form.salesOrderRows.setRendered %}
        {% do form.save.setRendered %}
    {{ form_end(form) }}


    {% include 'IsicsOpenMiamMiamBundle:Admin:activityStream.html.twig' %}
    {% include 'IsicsOpenMiamMiamBundle:Admin:Producer\\SalesOrder\\deleteRowDialog.html.twig' %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            new OpenMiamMiam.Quantity;
            new OpenMiamMiam.DeleteDialog;
        });
    </script>
{% endblock %}
