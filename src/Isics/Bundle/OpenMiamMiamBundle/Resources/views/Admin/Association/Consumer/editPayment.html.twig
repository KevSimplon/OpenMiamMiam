{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ 'admin.association.consumers.payments.form.edit_title'|trans({'%consumer%': consumer.fullName}) }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'admin.association.consumers.payments.form.payment'|trans }}</h2>
                </div>
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'id': 'open_miam_miam_admin_payment_form', 'novalidate': '', 'class': 'form form-horizontal'}}) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.amount) }}
                    {{ form_row(form.type) }}

                    {% do form.save.setRendered %}

                    <button type="submit" class="btn btn-primary btn-lg" />
                    <span class="glyphicon glyphicon-floppy-save"></span>
                    {{ 'admin.add'|trans }}
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% if payment.paymentAllocations|length > 0 %}
        <div class="row">
            <div class="col-md-9">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'admin.association.consumers.payments.form.allocations'|trans }}</h2>
                    </div>
                    <div class="panel-body text-center">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>{{ 'admin.association.consumers.payments.form.date'|trans }}</th>
                                <th>{{ 'admin.association.consumers.payments.form.sales_order'|trans }}</th>
                                <th>{{ 'admin.association.consumers.payments.form.sales_order_total'|trans }}</th>
                                <th>{{ 'admin.association.consumers.payments.form.allocated_amount'|trans }}</th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for allocation in payment.paymentAllocations %}
                                <tr>
                                    <td>{{ allocation.date|format_date }}</td>
                                    <td>{{ allocation.salesOrder.ref }}</td>
                                    <td>{{ allocation.salesOrder.total|number_format_currency(open_miam_miam.currency) }}</td>
                                    <td>{{ allocation.amount|number_format_currency(open_miam_miam.currency) }}</td>
                                    <td>
                                        <a href="{{ path('open_miam_miam.admin.association.consumer.delete_payment_allocation', {'id': association.id, 'consumerId': consumer.id, 'paymentAllocationId': allocation.id}) }}">{{ 'admin.association.consumers.payments.form.delete_allocation_payment'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <a href="{{ path('open_miam_miam.admin.association.consumer.list_payments', {'id': association.id, 'consumerId': consumer.id}) }}" class="pull-right">{{ 'admin.return'|trans }}</a>
{% endblock %}
