{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    <h1>{{ 'admin.association.sales_orders.view.title'|trans({'%ref%': order.ref}) }} <small>- {{ order.date|format_datetime }}</small></h1>

    <div class="alert alert-info">
        {{ 'admin.association.sales_orders.view.notice'|trans }}
    </div>

    {% include 'IsicsOpenMiamMiamBundle:Admin:salesOrderHeader.html.twig' with { 'order': order, 'showConsumerComment': true } %}

    <p class="text-right">
        <a href="{{ path('open_miam_miam.admin.association.sales_order.pay', {'id': association.id, 'salesOrderId': order.id}) }}" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-euro"></span>
            {{ 'admin.association.sales_orders.view.pay'|trans }}
        </a>
    </p>

    {% if order.salesOrderRows|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-association-sales-order">
                <thead>
                <tr>
                    <th>{{ 'admin.association.sales_orders.view.sales_order_row.producer'|trans }}</th>
                    <th>{{ 'admin.association.sales_orders.view.sales_order_row.product'|trans }}</th>
                    <th>{{ 'admin.association.sales_orders.view.sales_order_row.unit_price'|trans }}</th>
                    <th>{{ 'admin.association.sales_orders.view.sales_order_row.quantity'|trans }}</th>
                    <th>{{ 'admin.association.sales_orders.view.sales_order_row.total'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for row in order.salesOrderRows %}
                    <tr>
                        <td>{{ row.producer.name }}</td>
                        <td>{{ row.name }}</td>
                        <td>{{ row.unitPrice|number_format_currency(open_miam_miam.currency) }}</td>
                        <td>{{ row.quantity }}</td>
                        <td>{{ row.total|number_format_currency(open_miam_miam.currency) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="4">{{ 'admin.association.sales_orders.form.total'|trans }}</th>
                        <td>{{ order.total|number_format_currency(open_miam_miam.currency) }}</td>
                    </tr>
                    <tr{% if order.leftToPay %} class="danger"{% endif %}>
                        <th colspan="4">{{ 'admin.association.sales_orders.form.left_to_pay'|trans }}</th>
                        <td>
                            {% if order.leftToPay %}
                                {{ order.leftToPay|number_format_currency(open_miam_miam.currency) }}
                            {% else %}
                                {{ 0|number_format_currency(open_miam_miam.currency) }}
                            {% endif %}
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <a href="{{ path('open_miam_miam.admin.association.sales_order.list_for_branch_occurrence', {'id': association.id, 'branchOccurrenceId': order.branchOccurrence.id}) }}" class="pull-right">{{ 'admin.return'|trans }}</a>
    {% else %}
        {% include 'IsicsOpenMiamMiamBundle:Admin:empty.html.twig' with {'message': 'admin.association.sales_orders.sales_order_rows.no'|trans} %}
    {% endif %}

    {% include 'IsicsOpenMiamMiamBundle:Admin:activityStream.html.twig' %}
{% endblock %}
