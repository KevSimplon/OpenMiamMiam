{% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% form_theme form _self 'IsicsOpenMiamMiamBundle::form.html.twig' %}

{% block content %}
    <div class="pull-right association-producer-export-form">
        {{ form_start(form) }}
            {{ form_errors(form.month) }}
            {{ form_widget(form.month) }}

            {{ form_widget(form.export, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(form) }}
    </div>

    <h1>{{ 'admin.association.producers.list.title'|trans }}</h1>

    {% if associationHasProducers|length == 0 %}
        {% include 'IsicsOpenMiamMiamBundle:Admin:empty.html.twig' with {'message': 'admin.association.producers.list.no_producer'|trans} %}
    {% else %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-association-producers">
                <thead>
                    <tr>
                        <th>{{ 'admin.association.producers.list.name'|trans }}</th>
                        <th>{{ 'admin.association.producers.list.commission'|trans }}</th>
                        {% for branch in branches %}
                            <th>{{ branch.name }}</th>
                        {% endfor %}
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for associationHasProducer in associationHasProducers %}
                    <tr>
                        <td>{{ associationHasProducer.producer.name }}</td>
                        <td>{{ associationHasProducer.commission }} %</td>
                        {% for branch in branches %}
                            <td>
                                {% if branch in associationHasProducer.producer.branches %}
                                    <span class="glyphicon glyphicon-ok"></span>
                                {% endif %}
                            </td>
                        {% endfor %}
                        <td>
                            <a href="{{ path('open_miam_miam.admin.association.producer.edit', {'associationId': associationHasProducer.association.id, 'producerId': associationHasProducer.producer.id}) }}" class="btn btn-primary btn-xs" title="{{ 'admin.association.producer.list.edit'|trans }}">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}