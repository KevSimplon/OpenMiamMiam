{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch} %}
    {% block content %}
        <h2>{{ category.name }}</h2>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Producer</th>
                    <th>Price</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            <a href="{{ path('open_miam_miam_branch_product', {'branch_slug': branch.slug, 'category_slug': category.slug, 'product_slug': product.slug}) }}">
                                {{ product.name }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('open_miam_miam_producer', {'producer_slug': product.producer.slug}) }}">
                                {{ product.producer }}
                            </a>
                        </td>
                        <td>{{ product.price|number_format_currency(open_miam_miam.currency) }}</td>
                        <td>
                            {{ render(controller('IsicsOpenMiamMiamBundle:Cart:ShowAddForm', {'branch': branch, 'product': product})) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}
{% endembed %}
