{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch} %}
    {% block content %}
        <h2>{{ product.name }}</h2>

        Producer:
        <a href="{{ path('open_miam_miam_producer', {'producer_slug': product.producer.slug}) }}">
            {{ product.producer }}
        </a>

        {{ product.description }}

        {{ product.price|number_format_currency(open_miam_miam.currency) }}

        {{ render(controller('IsicsOpenMiamMiamBundle:Cart:ShowAddForm', {'branch': branch, 'product': product})) }}
    {% endblock %}
{% endembed %}
