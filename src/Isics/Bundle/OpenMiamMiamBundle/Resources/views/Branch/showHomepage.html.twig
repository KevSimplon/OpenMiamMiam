{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch, 'homepage': true} %}
    {% block content %}
        <div class="row">
            <div class="col-md-8">
                <div id="welcome" class="well">
                    {{ branch.presentation|raw }}
                </div>
            </div>
            <div class="col-md-4">
                <div id="news" class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title"><span class="glyphicon glyphicon-comment"></span> {{ 'zone.news.title'|trans }}</h2>
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="#">Le nouveau site Internet est en ligne !</a>
                        </li>
                    </ul>
                    <div class="panel-footer">
                        <a href="#">{{ 'zone.news.link'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>

        {{ render(controller('IsicsOpenMiamMiamBundle:Catalog:ShowProductsOfTheMoment', {'branch': branch})) }}
    {% endblock %}

    {% block javascript %}
        {{ parent() }}
        <script type="text/javascript">
            $(function() {
                new OpenMiamMiam.Quantity;
                new OpenMiamMiam.CartAddForm;
            });
        </script>
    {% endblock %}

    {% block javascript %}
        {{ parent() }}
        <script type="text/javascript">
            $(function() {
                new OpenMiamMiam.QuantityButtons;
                new OpenMiamMiam.CartAddForm;
            });
        </script>
    {% endblock %}
{% endembed %}