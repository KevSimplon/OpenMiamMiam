{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch} %}

    {% block content %}
        {% for producer in producers %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-condensed ">
                <caption>{{ producer.name }}</caption>
                <tbody>
                    <tr>
                        <th>{{ 'branch.producers.image'|trans }}</th>
                        <td>
                            {% if producer.image is not null %}
                                    <p><img src="{{ asset(get_image_producer_path(producer))|imagine_filter('s') }}" alt="{{ producer.name }}" /></p>
                            {% endif %}
                        </td>
                    </tr>
                        <tr>
                        <th>{{ 'branch.producers.presentation'|trans }}</th>
                        <td>{{ producer.presentation }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'branch.producers.address'|trans }}</th>
                        <td>{{ producer.address1}}{{ producer.address2}} {{ producer.zipcode}} {{ producer.city}}</td>
                    </tr>
                    <tr>
                        <th>{{ 'branch.producers.phone1'|trans }}</th>
                        <td>{{ producer.phone1 }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'branch.producers.phone2'|trans }}</th>
                        <td>{{ producer.phone2 }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'branch.producers.website'|trans }}</th>
                        <td>{{ producer.website }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'branch.producers.facebook'|trans }}</th>
                        <td>{{ producer.facebook }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        {% endfor %}
    {% endblock %}
{% endembed %}