{% extends "IsicsOpenMiamMiamBundle::minimal.html.twig" %}

{% block content %}
    <h1>{{ 'register.confirmed.title'|trans({'%firstname%': user.firstname, '%lastname%': user.lastname, '%email%': user.email}) }}</h1>
    <p>
        {{ 'register.confirmed.message'|trans({'%firstname%': user.firstname, '%lastname%': user.lastname, '%email%': user.email}) }}
    </p>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}
            <p>
                <a href="{{ targetUrl }}" class="btn btn-primary btn-lg">
                    <span class="glyphicon glyphicon-circle-arrow-right"></span>
                    {{ 'register.confirmed.next'|trans }}
                </a>
            </p>
        {% endif %}
    {% endif %}
{% endblock content %}
